! bar position
i3-wm.bar.position:	top
! the <>| key on german keyboards
i3-wm-neo: Mod3

! overriding of many keyboard bindings

!i3-wm.binding.launchen.app: d
! Navigation
i3-wm.binding.ws_next: Mod1+Right
i3-wm.binding.ws_prev: Mod1+Left
i3-wm.binding.ws_next_on_output: Ctrl+Right
i3-wm.binding.ws_prev_on_output: Ctrl+Left
i3-wm.binding.next_free: Menu
i3-wm.binding.move_next_free: Shift+Menu
i3-wm.binding.take_next_free: Mod1+Menu
i3-wm.binding.inc_gaps: Prior
i3-wm.binding.dec_gaps: Next
! scratchpad
i3-wm.binding.move_scratchpad: m
i3-wm.binding.from_scratchpad: Shift+m

i3-wm.binding.split_h: h
i3-wm.binding.help: Shift+h

! Appearance
