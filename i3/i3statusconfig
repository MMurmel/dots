general {
  output_format = "i3bar"
  separator = "|"
  
  colors = true
  color_good = "#a3be8c"
  color_degraded = "#ebcb8b"
  color_bad = "#bf616a"
}

order += "volume master"
order += "battery all"
order += "tztime local"

volume master {
        format = " %volume"
        format_muted = " %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
 
}

tztime local {
    format = "%d.%m.%Y %H:%M"
}

battery all {
        format = "%status:%percentage %remaining"
        format_down = ""
        
        hide_seconds = true
        integer_battery_capacity = true
        
        status_chr = ""
        status_bat = ""
        status_unk = ""
        status_full = ""

        low_threshold = 15
        threshold_type = percentage
}
